<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.leeee.wifimanager.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Ip"
        android:ems="10"
        android:id="@+id/ip_editText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Port"
        android:ems="10"
        android:layout_below="@+id/ip_editText"
        android:layout_alignEnd="@+id/ip_editText"
        android:layout_marginTop="16dp"
        android:id="@+id/port_editText" />

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ip_editText"
        android:layout_alignStart="@+id/ip_editText"
        android:layout_marginTop="68dp"
        android:id="@+id/connect_btn"
        android:layout_toStartOf="@+id/disconnect_btn" />

    <Button
        android:text="Disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/connect_btn"
        android:layout_alignEnd="@+id/ip_editText"
        android:id="@+id/disconnect_btn" />
</RelativeLayout>
